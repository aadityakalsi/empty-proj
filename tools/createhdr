#!/bin/bash

if [ $# -ne 2 ];
then
  echo "Usage:"
  echo "  createhdr path_to_hdr_file include_guard"
  exit 1
fi

tools_dir=$(cd "$(dirname "$0")"; pwd)
proj_dir=`dirname ${tools_dir}`

lic=$(cat $(${proj_dir}/tools/findlicense))

if [ -e $1 ]
then
    rm $1
fi

touch $1

echo "/*" >> $1
echo "${lic}" >> $1
echo "*/" >> $1
echo "" >> $1
echo "/**" >> $1
echo " * \file `basename $1`" >> $1
echo " * \date `date +%Y`" >> $1
echo " */" >> $1
echo "" >> $1
echo "#ifndef $2" >> $1
echo "#define $2" >> $1
echo "" >> $1
echo "#endif//$2" >> $1
echo "" >> $1
